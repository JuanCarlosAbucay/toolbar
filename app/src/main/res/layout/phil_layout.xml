<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Phil Jones"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/philImage"
        android:src="@drawable/phil"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/descripcionHarry"
        android:text="Philip Anthony Jones2​ (Preston, Inglaterra, Reino Unido, 21 de febrero de 1992), más conocido como Phil Jones, es un futbolista británico que juega de defensa en el Manchester United F. C. de la Premier League inglesa."/>
</LinearLayout>